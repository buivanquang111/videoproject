<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp">



        </FrameLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imgvideo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_video" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor"
                android:layout_toRightOf="@+id/imgvideo"/>
            <ImageView
                android:id="@+id/imglogin"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_login"/>
            <ImageView
                android:id="@+id/imgsearch"
                android:layout_toLeftOf="@+id/imglogin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_search"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/trangchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgtrangchu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_trangchu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trang_chu"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/thinhhanh"
                android:layout_toRightOf="@+id/trangchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgthinhhanh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_thinhhanh"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thinh_hanh"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold"/>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</layout>