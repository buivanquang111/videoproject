<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
                android:id="@+id/playvideoview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"/>

        <ImageView
            android:id="@+id/imgplayvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pause_video"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_95sdp"/>
        <ImageView
            android:id="@+id/imgpasevideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_video"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_95sdp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/imgtuanhanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tua_nhanh_video"
            android:layout_marginLeft="@dimen/_220sdp"
            android:layout_marginTop="@dimen/_95sdp"/>
        <ImageView
            android:id="@+id/imgtuacham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tua_cham_video"
            android:layout_marginTop="@dimen/_95sdp"
            android:layout_marginLeft="@dimen/_60sdp"/>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_below="@+id/playvideoview"
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvplayvideoview"
            android:layout_below="@+id/playvideoview"
            android:background="#AAA5A5"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="title"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"/>
        <TextView
            android:id="@+id/danhgia"
            android:layout_below="@+id/tvplayvideoview"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="@string/danhgia"/>
        <RatingBar
            android:layout_below="@+id/danhgia"
            android:numStars="5"
            android:progress="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>